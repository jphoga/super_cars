<div class="text-center">
    <h1><%= @car.brand %> <%= @car.model %></h1>
  <div class="show_image">
    <%= cl_image_tag @car.photo, height: 400, width: 800%>
  </div>
</div>


<hr>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-1">
      <div class= "new--desc-card">
          <h4><%= @car.brand %> <%= @car.model %></h4>
          <table>
            <tr>
              <td>Year:</td>
              <td><%= @car.year %></td>
            </tr>
            <tr>
              <td>Mileage:</td>
              <td><%= @car.mileage %></td>
            </tr>
            <tr>
              <td>Body Type:</td>
              <td><%= @car.body_type %></td>
            </tr>
            <tr>
              <td>Transmission:</td>
              <td><%= @car.transmission %></td>
            </tr>
            <tr>
              <td>Location:</td>
              <td><%= @car.location %></td>
            </tr>
            <tr>
              <td>Price:</td>
              <td><%= @car.price %> JPY</td>
            </tr>
          </table>
        </div>
</div>

<div class="col-sm-4 col-sm-offset-1">


  <div class="booking-card">
        <h3>Booking Information</h3>
          <%= render 'bookings/form', booking: @booking %>
        <div class = "btns-end  col-sm-12">
          <%= link_to "Back to listings", cars_path, class: 'btn btn-primary'%>
          <%= link_to "Delete listing", car_path(@car),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this listing?" },class: 'btn btn-danger'
          %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
