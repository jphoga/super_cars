<div class="text-center">
<h1><%= @car.brand %> <%= @car.model %></h1>
</div>

<hr>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="description-card">
      <h4><%= @car.brand %> <%= @car.model %></h4>
      <table>
        <tr>
          <td>Year:</td>
          <td><%= @car.year %></td>
        </tr>
        <tr>
          <td>Mileage:</td>
          <td><%= @car.mileage %></td>
        </tr>
        <tr>
          <td>Body Type:</td>
          <td><%= @car.body_type %></td>
        </tr>
        <tr>
          <td>Transmission:</td>
          <td><%= @car.transmission %></td>
        </tr>
        <tr>
          <td>Location:</td>
          <td><%= @car.location %></td>
        </tr>
        <tr>
          <td>Price:</td>
          <td><%= @car.price %> JPY</td>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>

<br><br><br><br><br>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h3>Booking Information</h3>
        <%= render 'bookings/form', booking: @booking %>
        <%= link_to "Back to listings", cars_path, class: 'btn btn-primary'%>
        <%= link_to "Back to home", root_path, class: 'btn btn-primary' %>
        <%= link_to "Delete listing", car_path(@car),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this listing?" },class: 'btn btn-danger'
        %>
    </div>
  </div>
</div>
