<div class="text-center">
<h1><%= @car.brand %> <%= @car.model %></h1>
<%= cl_image_tag @car.photo, height: 300, width: 400, crop: :fill %>
</div>


<hr>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="description-card">
      <h4><%= @car.brand %> <%= @car.model %></h4>
      <table>
        <tr>
          <td>Year:</td>
          <td><%= @car.year %></td>
        </tr>
        <tr>
          <td>Mileage:</td>
          <td><%= @car.mileage %></td>
        </tr>
        <tr>
          <td>Body Type:</td>
          <td><%= @car.body_type %></td>
        </tr>
        <tr>
          <td>Transmission:</td>
          <td><%= @car.transmission %></td>
        </tr>
        <tr>
          <td>Location:</td>
          <td><%= @car.location %></td>
        </tr>
        <tr>
          <td>Price:</td>
          <td><%= @car.price %> JPY</td>
        </tr>
      </table>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      <div class="booking-card">
        <h3>Booking Information</h3>
          <%= render 'bookings/form', booking: @booking %>
          <%= link_to "Back to listings", cars_path, class: 'btn btn-primary'%>
          <%= link_to "Back to home", root_path, class: 'btn btn-primary' %>
          <%= link_to "Delete listing", car_path(@car),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this listing?" },class: 'btn btn-danger'
          %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <% if @unreviewed_bookings.any? %>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="review-card">
          <h2>Write A Review</h2>
          <% @unreviewed_bookings.each do |unreviewed_booking| %>
            <%= render 'reviews/form', review: @review, unreviewed_booking: unreviewed_booking %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <hr>
  <h2 class="text-center">Reviews</h2>
  <hr>
  <div class="row">
    <% @car.reviews.order("created_at DESC").each do |review| %>
    <div class="review-separator">
      <h3><%= review.user.first_name %> <%= review.user.last_name %> <%= cl_image_tag review.user.photo, class: "avatar img-circle" %></h3>
      <h3><%= review.rating %></h3>
      <h3><%= review.content %></h3>
    </div>
    <% end %>
  </div>
</div>
