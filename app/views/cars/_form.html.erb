<%= simple_form_for(car) do |f| %>
<div class = "textforform">
 <div class= "form-input"> <%= f.input :brand, label: "Brand" %></div>
 <div class= "form-input"> <%= f.input :model, label: "Model" %></div>
 <div class= "form-input"> <%= f.input :mileage, label: "Mileage" %></div>
 <div class= "form-input"> <%= f.input :year, label: "Year" %></div>
 <div class= "form-input"> <%= f.input :body_type, label: "Body Type", collection: %w(Convertible Coupe Sedan SUV Wagon) %></div>
 <div class= "form-input"> <%= f.input :location, label: "Location" %></div>
 <div class= "form-input"> <%= f.input :transmission, label: "Transmission",collection: %w(Automatic Manual) %></div>
 <div class= "form-input">  <%= f.input :price, label: "Price" %> </div>
 <div class= "form-input"> <%= f.input :photo %> </div>
 <div class= "form-input"> <%= f.input :photo_cache, as: :hidden %> </div>
 <div class="nice-button"><%= f.submit %></div>
</div>
<% end %>
